singularity {
     enabled = true
     autoMounts = true
     runOptions = "-e -B $launchDir -B $ReferenceDir -B $SingularityDir -B $GLI -B $GLI2 -B $workdir"
     cacheDir = "/mnt/scratch/SILENT/Act3/Processed/Individual/tmp"
 }

 
